<!-- if it is a guest user tell them to log in -->
  <% if current_user.is_a?(GuestUser) %>
    <p class="blockquote text-muted">(Please Log In Or Sign Up To Comment) </p>

  <% end %>

  <!-- It is saying don't show this forum if it is a GuestUser -->
  <% unless current_user.is_a?(GuestUser) %>
    <%= form_for @comment, do |f| %>
      <div class="form-group">
        <%= f.label :content, "Comments" %>
        <%= f.text_area :content, size: '30x5' ,class: 'form-control'%>
      </div>
        <%= f.submit 'Post Comment', class: 'btn btn-primary'%>
    <% end %>
  <% end %>
