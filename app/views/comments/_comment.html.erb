<div class="comment-card">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_helper comment.user%>
        </div><!-- end of first col-->
        <div class="col-md-11">
          <div class="ml-2">
          <%= comment.content.capitalize %>
          </div>
          <small class="ml-2 text-muted">
            Posted by <%= comment.user.first_name.capitalize %> <%= distance_of_time_in_words(comment.created_at, Time.now)%> ago
          </small>
        </div><!-- end of second col-->
      </div><!-- end of row-->
    </div>
  </div>
</div>