  <div class="card p-2">
    <div class="app-card-container mt-2 ">


    <div class="row">
      <div class="col-md-4 ">
        <%= image_tag "peter.png", style: 'height:350px;width:auto;', alt: "profile image", class: 'p-1' %>

      </div>

      <div class="col-md-8 ">
