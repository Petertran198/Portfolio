       <button
        class="btn btn-outline-dark mr-1"
        type="button"
        data-toggle="collapse"
        data-target="#education"
        aria-expanded="false"
        aria-controler="education"> 
          Education
        </button>

          <button
            class="btn btn-outline-primary "
            type="button"
            data-toggle="collapse"
            data-target="#skill"
            aria-expanded="false"
            aria-controler="skill"
          >
            Skills
          </button>  

