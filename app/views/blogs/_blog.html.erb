<div class="blog-post">
  <h2 class="blog-post-title title"><%= link_to blog.title.titleize, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  
  <!-- admin action of delete edit and toggle status -->
  <%= render partial: 'blogs/admin-actions', locals: {blog: blog} %>
  <p>
    <p><%= (markdown blog.body.truncate(700))%></p>
  </p>
</div>