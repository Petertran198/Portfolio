<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>




<nav class="breadcrumb  breadcrumb-right-arrow row">
    <div class='col'>
    <%= link_to "Blog", blogs_path, class: 'breadcrumb-item' %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
 
    <span class="breadcrumb-item active"><%= @blog.title %></span>
 
    <span class="float-right">
      <%= link_to fa_icon('pencil'), edit_blog_path(@blog), class: "mr-2" if logged_in?(:site_admin) %> 

      <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
    </span>
    </div>
  </nav>



  <p>
    <!-- This is calling the markdown method to parse over all the text in @blog.body-->
    <%= markdown(@blog.body) %>
  </p>

  <%= render 'comments/comment_form' %>

  


 <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %><!-- this will look for a partial in comments view folder called _comment because of rails convention for collections-->
 </div>

  


</div>
