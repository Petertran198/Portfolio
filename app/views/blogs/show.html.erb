<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>

  <p>
    <%= @blog.body %>
  </p>


  <!-- ***START OF COMMENT FORUM **-->

  <!-- if it is a guest user tell them to log in -->
  <% if current_user.is_a?(GuestUser) %>
    <p style="font-style: italic; color: #696969;">(Please Log In Or Sign Up To Comment) </p>

  <% end %>

  <!-- It is saying don't show this forum if it is a GuestUser -->
  <% unless current_user.is_a?(GuestUser) %>
    <%= form_for @comment, url: '#' do |f| %>
      <div class="form-group">
        <%= f.label :content, "Comments" %>
        <%= f.text_area :content, size: '30x5' ,class: 'form-control'%>
      </div>
        <%= f.submit 'Post Comment', class: 'btn btn-primary'%>
    <% end %>
  <% end %>



 
 <%= render @blog.comments %><!-- this will look for a partial in comments view folder called _comment because of rails convention-->
  


</div>
